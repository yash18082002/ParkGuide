<% layout('layouts/boilerplate') %>
    <div class="row">    
<h1 class="text-center">Edit a park!</h1>
<div class="col-6 offset-3">
    <form action="/parks/<%= park._id %>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
        <label class="form-label" for="title">Park Name</label>
        <input class="form-control" type="text" name="park[title]" id="title" value="<%= park.title %>" required>
        <div class="invalid-feedback">Enter park name</div>
        </div>
        <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" name="park[location]" id="location" value="<%= park.location %>" required>
        <div class="invalid-feedback">Enter park location</div>
        </div>
        <div class="mb-3">
        <label for="image" class="form-label">Upload Image(s)</label>
        <input class="form-control" type="file" id="image" name="image" multiple>
        </div>
        <label class="form-label" for="price">Entry Price</label>
        <div class="input-group mb-3">
        <span class="input-group-text">â‚¹</span>
        <input class="form-control" type="text" name="park[price]" id="price" value="<%= park.price %>" required>
        <div class="invalid-feedback">Enter entry fee</div>
        </div>
        <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" name="park[description]" id="description" required><%= park.description %></textarea>
        <div class="invalid-feedback">Enter park description</div>
        </div>
        <div class="mb-3">
        <% park.images.forEach(function(img, i) {%>
        <img src="<%= img.url %>" class="img-thumbnail" alt="">
        <div class="form-check-inline">
        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
        </div>
        <label for="image-<%=i%>">Delete</label>
        <% }) %>
        </div>
        <button class="btn btn-success">Update</button>
    </form>
    <a class="btn btn-primary mt-3" href="/parks/<%= park._id %>">Back to Park details</a>
</div>
</div>